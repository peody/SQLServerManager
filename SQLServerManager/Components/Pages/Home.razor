<script>
    (function () {
        let currentSlideIndex = 0;
        const slider = document.querySelector('.slides');
        const totalSlides = document.querySelectorAll('.image-c').length;

        function displaySlide(index) {
            // Xử lý chỉ số slide
            currentSlideIndex = (index + totalSlides) % totalSlides; // Sử dụng toán tử modulo để đảm bảo chỉ số hợp lệ
            // Cập nhật vị trí của slides
            slider.style.transform = `translateX(-${currentSlideIndex * 100}%)`;
        }

        function changeSlide(direction) {
            displaySlide(currentSlideIndex + direction);
        }

        // Tự động chuyển slide mỗi 3 giây
        const autoSlideInterval = setInterval(() => {
            changeSlide(1);
        }, 3000);

        // Gán sự kiện cho các nút trước và sau
        const prevButton = document.querySelector('.prev');
        const nextButton = document.querySelector('.next');

        // Thêm sự kiện chỉ một lần cho các nút
        prevButton.addEventListener('click', () => changeSlide(-1));
        nextButton.addEventListener('click', () => changeSlide(1));

        // Hiển thị slide đầu tiên
        displaySlide(currentSlideIndex);
    })();
</script>




