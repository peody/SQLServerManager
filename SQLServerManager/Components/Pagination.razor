<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0)" @onclick="() => OnPageChanged.InvokeAsync(CurrentPage - 1)">Previous</a>
        </li>

        @for (int i = 1; i <= TotalPages; i++)
        {
            var pageNumber = i;
            <li class="page-item @(pageNumber == CurrentPage ? "active" : "")">
                <a class="page-link" href="javascript:void(0)" @onclick="() => OnPageChanged.InvokeAsync(pageNumber)">@pageNumber</a>
            </li>
        }

        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
            <a class="page-link" href="javascript:void(0)" @onclick="() => OnPageChanged.InvokeAsync(CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>

@code {
    [Parameter] public int CurrentPage { get; set; }
    [Parameter] public int TotalPages { get; set; }
    [Parameter] public EventCallback<int> OnPageChanged { get; set; }
}
